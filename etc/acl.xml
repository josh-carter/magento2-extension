<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::system">
                    <resource id="Straker_EasyTranslationPlatform::customMenu" title="Custom Menu">
                        <resource id="EasyTranslationPlatform_EasyTranslationPlatform::productsgrid" title="Straker Products Grid" />
                        <resource id="Straker_EasyTranslationPlatform::settings" title="Straker Settings" />
                        <resource id="Straker_EasyTranslationPlatform::support" title="Straker Support" />
                        <resource id="Straker_EasyTranslationPlatform::termsandconditions" title="Straker Terms" />
                        <resource id="Straker_EasyTranslationPlatform::about" title="Straker About" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Straker_EasyTranslationPlatform::config" title="EasyTranslationPlatformConfig"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
