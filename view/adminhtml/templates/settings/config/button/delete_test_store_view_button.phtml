<?php
/**  @var $block \Straker\EasyTranslationPlatform\Block\Adminhtml\Settings\Config\DeleteTestingStoreView */

use Straker\EasyTranslationPlatform\Api\Data\SetupInterface;

echo $block->getButtonHtml();
echo '<p class="note"><span>'
    . $block->escapeHtml(__('This will delete your Testing Store View and all test jobs created for it.'))
    .'</span>';
$testStoreView = $block->_getTestStoreView();
?>

<div id="delete-test-store-modal" style="display: none;">
    <p><?= $block->escapeHtml(__('This will delete your Testing Store View and all test jobs created for it.')) ?></p>
    <fieldset class="fieldset admin__fieldset fieldset-wide">
        <legend class="admin__legend legend">
            <span></span>
        </legend><br>


        <div class="messages">
        </div>


        <div class="admin__field field field-site_mode ">
            <label class="label admin__field-label" for="item_site_mode">
                <span><?= $block->escapeHtml(__('Switch Site Mode')); ?>:&nbsp;</span>
            </label>
            <div class="admin__field-control control">
                <select id="item_site_mode_live" name="site_mode" class=" select admin__control-select">
                    <option value="<?= $block->escapeHtml(SetupInterface::SITE_MODE_LIVE); ?>"
                            selected="selected">
                        <?= $block->escapeHtml(__('Live'));?>
                    </option>
                    <option value="<?= $block->escapeHtml(SetupInterface::SITE_MODE_SANDBOX); ?>">
                        <?= $block->escapeHtml(__('Sandbox'));?>
                    </option>
                </select>
            </div>
        </div>
    </fieldset>
</div>


<script>
    require([
        'jquery',
        'Magento_Ui/js/modal/modal',
        'Magento_Ui/js/modal/alert',
        'mage/translate'
    ], function( $, modal, alert ){
        var options = {
            type: 'popup',
            responsive: true,
            innerScroll: true,
            title: $.mage.__('Delete Testing Store View: <?= $block->escapeHtml($testStoreView->getName()); ?>'),
            buttons: [
                {
                    text: $.mage.__('Cancel'),
                    class: 'action cancel',
                    click: function () {
                        this.closeModal();
                    }
                },
                {
                    text: $.mage.__('Delete'),
                    class: 'action primary',
                    click: function () {
                        var siteMode = $('#item_site_mode_live').val();
                        this.closeModal();
                        deleteTestStore(siteMode);
                    }
                }
            ]
        };
        var popup = modal(options, $('#delete-test-store-modal'));

        function deleteTestStore(siteMode) {
            $.ajax({
                url: '<?= $block->escapeHtml($block->getAjaxResetUrl()); ?>',
                data: {siteMode: siteMode},
                method: 'get',
                dataType: 'json',
                showLoader: true
            }).always( function ( data ) {
                if( data.Success ){
                    alert({
                        title: '',
                        content: $.mage.__('Test store view deleted successfully. ' +
                            'Click <b>OK</b> to reload this page.'),
                        actions: {
                            always: function () {
                                location.reload();
                            }
                        }
                    });
                }else{
                    var msg = 'Something went wrong while deleting test store view. <br/>';
                    msg += (typeof data.Message != 'undefined')
                        ? '<p><b>Message: </b><i>' + data.Message + '</i></p>'
                        : '';
                    alert({
                        title: '',
                        content: $.mage.__( msg + ' Please try again.')
                    });
                }
            });
        }

        var $deleteTestStoreButton = $('#straker_config_env_delete_test_store');

        $deleteTestStoreButton.on('click', function(){
            $('#delete-test-store-modal').modal('openModal');
        });
    });
</script>
